<?xml version="1.0"?>
<config>
    <modules>
        <FireGento_GermanSetup>
            <version>0.1.0</version>
        </FireGento_GermanSetup>
    </modules>
    <global>
        <models>
            <germansetup>
                <class>FireGento_GermanSetup_Model</class>
            </germansetup>
        </models>
        <blocks>
            <germansetup>
                <class>FireGento_GermanSetup_Block</class>
            </germansetup>
        </blocks>
        <helpers>
            <germansetup>
                <class>FireGento_GermanSetup_Helper</class>
            </germansetup>
        </helpers>
        <resources>
            <germansetup_setup>
                <setup>
                    <module>FireGento_GermanSetup</module>
                    <class>Mage_Eav_Model_Entity_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </germansetup_setup>
        </resources>
    </global>
    <frontend>
        <layout>
            <updates>
                <germansetup>
                    <file>germansetup.xml</file>
                </germansetup>
            </updates>
        </layout>
        <translate>
            <modules>
                <FireGento_GermanSetup>
                    <files>
                        <germansetup>FireGento_GermanSetup.csv</germansetup>
                    </files>
                </FireGento_GermanSetup>
            </modules>
        </translate>
    </frontend>
    <adminhtml>
        <layout>
            <updates>
                <germansetup>
                    <file>germansetup.xml</file>
                </germansetup>
            </updates>
        </layout>
        <translate>
            <modules>
                <FireGento_GermanSetup>
                    <files>
                        <germansetup>FireGento_GermanSetup.csv</germansetup>
                    </files>
                </FireGento_GermanSetup>
            </modules>
        </translate>
    </adminhtml>
</config>
