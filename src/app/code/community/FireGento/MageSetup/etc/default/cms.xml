<config>
    <default>
        <magesetup>
            <pages>
                <default>
                    <magesetup_404>
                        <execute>1</execute>
                        <title>Seite nicht gefunden</title>
                        <identifier>no-route</identifier>
                        <root_template>one_column</root_template>
                        <text>app/locale/de_DE/template/magesetup/page/404.html</text>
                    </magesetup_404>

                    <magesetup_imprint>
                        <execute>1</execute>
                        <title>Impressum</title>
                        <identifier>impressum</identifier>
                        <root_template>one_column</root_template>
                        <text>app/locale/de_DE/template/magesetup/page/impressum.html</text>
                    </magesetup_imprint>

                    <magesetup_payment>
                        <execute>1</execute>
                        <title>Zahlungsarten</title>
                        <identifier>zahlung</identifier>
                        <root_template>one_column</root_template>
                        <text>app/locale/de_DE/template/magesetup/page/zahlung.html</text>
                    </magesetup_payment>

                    <magesetup_privacy>
                        <execute>1</execute>
                        <title>Datenschutz</title>
                        <identifier>datenschutz</identifier>
                        <root_template>one_column</root_template>
                        <text>app/locale/de_DE/template/magesetup/page/datenschutz.html</text>
                    </magesetup_privacy>

                    <magesetup_shipping>
                        <execute>1</execute>
                        <title>Lieferung</title>
                        <identifier>lieferung</identifier>
                        <root_template>one_column</root_template>
                        <text>app/locale/de_DE/template/magesetup/page/lieferung.html</text>
                    </magesetup_shipping>

                    <magesetup_order>
                        <execute>1</execute>
                        <title>Bestellvorgang</title>
                        <identifier>bestellung</identifier>
                        <root_template>one_column</root_template>
                        <text>app/locale/de_DE/template/magesetup/page/bestellung.html</text>
                    </magesetup_order>

                    <magesetup_business_terms>
                        <execute>1</execute>
                        <title>AGB</title>
                        <identifier>agb</identifier>
                        <root_template>one_column</root_template>
                        <text>app/locale/de_DE/template/magesetup/page/agb.html</text>
                    </magesetup_business_terms>

                    <magesetup_revocation>
                        <execute>1</execute>
                        <title>Widerrufsbelehrung</title>
                        <identifier>widerruf</identifier>
                        <root_template>one_column</root_template>
                        <text>app/locale/de_DE/template/magesetup/page/widerruf.html</text>
                    </magesetup_revocation>
                </default>
            </pages>

            <blocks>
                <default>
                    <gs_business_terms>
                        <execute>1</execute>
                        <title>AGB</title>
                        <identifier>gs_business_terms</identifier>
                        <text>app/locale/de_DE/template/magesetup/block/agb.html</text>
                    </gs_business_terms>

                    <gs_revocation>
                        <execute>1</execute>
                        <title>Widerrufsbelehrung</title>
                        <identifier>gs_revocation</identifier>
                        <text>app/locale/de_DE/template/magesetup/block/widerruf.html</text>
                    </gs_revocation>

                    <gs_footerlinks>
                        <execute>1</execute>
                        <title>Footer Links</title>
                        <identifier>footer_links</identifier>
                    </gs_footerlinks>
                </default>
            </blocks>

            <footer_links>
                <default>
	                <agreement>
	                    <title>AGB</title>
	                    <target>agb</target>
	                </agreement>
	                <revocation>
	                    <title>Widerruf</title>
	                    <target>widerruf</target>
	                </revocation>
	                <shipping>
	                    <title>Lieferung</title>
	                    <target>lieferung</target>
	                </shipping>
	                <payment>
	                    <title>Zahlungsarten</title>
	                    <target>zahlung</target>
	                </payment>
	                <privacy>
	                    <title>Datenschutz</title>
	                    <target>datenschutz</target>
	                </privacy>
	                <order>
	                    <title>Bestellvorgang</title>
	                    <target>bestellung</target>
	                </order>
	                <imprint>
	                    <title>Impressum</title>
	                    <target>impressum</target>
	                </imprint>
                </default>
            </footer_links>
        </magesetup>
    </default>
</config>
